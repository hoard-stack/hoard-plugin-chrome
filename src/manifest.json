{
  "manifest_version": 2,
  "name": "Hoard",
  "description": "Hoard extension",
  "version": "1.0",
  "browser_action": {
    "default_icon": "content/images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
  {
    "matches": ["https://www.facebook.com/*"],
    "css": ["content/css/style.css"],
    "js": ["main.js"]
  }
],
  "permissions": [
    "activeTab",
    "tabs",
    "http://www.facebook.com/*",
    "https://www.facebook.com/*"
  ]
}
